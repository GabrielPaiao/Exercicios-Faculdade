<!-- views/simulacoes/index.ejs -->

<%- include('../layouts/main', { title: 'Simulações' }) %>

<h1>Simulações</h1>
<a href="/simulacoes/create" class="btn">Criar Simulação</a>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Tipo de Phishing</th>
      <th>Objetivo</th>
      <th>Usuário Responsável</th>
      <th>Equipe</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% simulacoes.forEach(simulacao => { %>
      <tr>
        <td><%= simulacao.descricao %></td>
        <td><%= simulacao.tipoPhishing %></td>
        <td><%= simulacao.objetivo %></td>
        <td><%= simulacao.usuario.nome %></td>
        <td><%= simulacao.equipe.nome %></td>
        <td>
          <a href="/simulacoes/<%= simulacao.id %>">Ver</a>
          <a href="/simulacoes/<%= simulacao.id %>/edit">Editar</a>
          <form action="/simulacoes/<%= simulacao.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
