<!-- views/simulacoes/show.ejs -->

<%- include('../layouts/main', { title: 'Detalhes da Simulação' }) %>

<h1>Detalhes da Simulação</h1>
<p><strong>Descrição:</strong> <%= simulacao.descricao %></p>
<p><strong>Tipo de Phishing:</strong> <%= simulacao.tipoPhishing %></p>
<p><strong>Objetivo:</strong> <%= simulacao.objetivo %></p>
<p><strong>Usuário Responsável:</strong> <%= simulacao.usuario.nome %></p>
<p><strong>Equipe:</strong> <%= simulacao.equipe.nome %></p>

<h2>Resultados</h2>
<ul>
  <% simulacao.resultados.forEach(resultado => { %>
    <li>
      <%= resultado.usuario.nome %> - <%= resultado.status %>
    </li>
  <% }); %>
</ul>

<a href="/simulacoes/<%= simulacao.id %>/edit" class="btn">Editar</a>
<form action="/simulacoes/<%= simulacao.id %>?_method=DELETE" method="POST">
  <button type="submit">Excluir</button>
</form>
